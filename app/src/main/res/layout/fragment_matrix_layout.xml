<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background">
    <!--android:layout_above="@+id/adViewSecond"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scroll_matrix"
            android:layout_above="@+id/adViewSecond"

            android:layout_alignParentTop="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/linearLayout">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:text="@string/matrix1" android:id="@+id/TV_matrix1"/>
                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:inputType="textMultiLine" android:ems="10" android:id="@+id/matrix1"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:layout_weight="1">
                        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:text="@string/matrix2" android:id="@+id/TV_matrix2"/>
                        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:inputType="textMultiLine" android:ems="10" android:id="@+id/matrix2"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical" android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <RelativeLayout
                        android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:id="@+id/spinner_matrix" android:layout_alignParentTop="true"/>
                    </RelativeLayout>

                    <RadioGroup
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:orientation="vertical" android:id="@+id/radioGroup">
                        <RadioButton
                            android:id="@+id/radio_matrix1" android:layout_width="fill_parent"
                            android:layout_height="wrap_content" android:text="@string/matrix1"/>
                        <RadioButton
                            android:id="@+id/radio_matrix2" android:layout_width="fill_parent"
                            android:layout_height="wrap_content" android:text="@string/matrix2"/>
                    </RadioGroup>
                    <HorizontalScrollView android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fillViewport="true">
                        <EditText
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:id="@+id/ET_result"/>
                    </HorizontalScrollView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adUnitId="@string/banner_2"
            ads:adSize="BANNER"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_matrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/floating_button_margin"
        android:src="@drawable/ic_keyboard_return_grey600_24dp"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_pressed"
        fab:fab_colorRipple="@color/ripple" />
</FrameLayout>